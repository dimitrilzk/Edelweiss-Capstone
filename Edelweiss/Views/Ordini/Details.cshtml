@model Edelweiss.Models.Ordini

@{
    ViewBag.Title = "Details";
}

<p class="my-3">
    <a href="/Ordini/Index" class="btn btn-outline-success">Torna indietro</a>
</p>

<div class="row my-3">
    <div class="col-lg-6 text-center py-5">
        <p>Cliente:</p>
        <h4>@Model.Nome @Model.Cognome</h4>
        <p>Telefono:</p>
        <h4>@Model.Cellulare</h4>
        <p>Email:</p>
        <h4>@Model.Email</h4>
    </div>
    <div class="col-lg-6 text-center py-5">
        <p>Pacchetto:</p>
        <h4>@Model.NomePacchetto</h4>
        <p>Prezzo:</p>
        <h4>@Model.PrezzoAcquisto.ToString("c2")</h4>
    </div>
</div>
