@model Edelweiss.Models.Ordini

@{
    ViewBag.Title = "Delete";
}

<div class="alert alert-danger my-3">
    <h3 class="text-center">Sei sicuro di voler elimiare questo messaggio?</h3>
</div>

<div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Cancella" class="btn btn-danger" />
            <a href="/Ordini/Index" class="btn btn-outline-success">Torna indietro</a>
        </div>
    }
</div>

<div class="row my-3">
    <div class="col-lg-6 text-center py-5">
        <p>Cliente:</p>
        <h4>@Model.Nome @Model.Cognome</h4>
        <p>Telefono:</p>
        <h4>@Model.Cellulare</h4>
        <p>Email:</p>
        <h4>@Model.Email</h4>
    </div>
    <div class="col-lg-6 text-center py-5">
        <p>Pacchetto:</p>
        <h4>@Model.NomePacchetto</h4>
        <p>Prezzo:</p>
        <h4>@Model.PrezzoAcquisto.ToString("c2")</h4>
    </div>
</div>

