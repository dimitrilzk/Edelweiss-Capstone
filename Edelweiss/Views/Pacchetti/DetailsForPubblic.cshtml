@model Edelweiss.Models.Pacchetti

@{
    ViewBag.Title = "DetailsForPubblic";
}

@*<h2 class="text-center my-3">Dettagli pacchetto</h2>*@


<div class="row my-3">

        <div class="col-lg-4  d-flex justify-content-center my-3">
            <div class="card pack packs my-auto" style="width: 20rem; ">
                <div class="card-body my-3">
                    <h5 class="card-subtitle my-2 me-4 text-decoration-line-through text-end pacchettodesc">@Convert.ToDecimal(@Model.PrezzoScontato).ToString("c0")</h5>
                    <h2 class="card-text text-end text-center pacchettonumb">@Convert.ToDecimal(@Model.PrezzoEffettivo).ToString("c0")</h2>
                    <p class="card-text text-end me-4 pacchettodesc">@Model.Descrizione</p>
                    <h1 class="card-title text-center text-uppercase my-4 pacchettonumb">@Model.Nome</h1>
                    <p class="d-flex justify-content-center">
                        <a href='@Url.Action("AggiungiCarrello", new { id = Model.IdPacchetto })' class="btn fs-1 pacchettodesc"><i class="bi bi-cart-plus"></i></a>
                    </p>
                    <p class="d-flex justify-content-center">
                        <a class="bttndett">Dettagli</a>
                    </p>
                </div>
            </div>
        </div>

        <div class="col-lg-8 text-center my-auto py-5">
            @if (Model.Dettaglio1 != null)
            {
                <div class="d-flex justify-content-center align-items-center  p-2">
                    <div class="sage detailsico dettborder px-2 py-1">
                        <h2><i class="bi bi-buildings"></i></h2>
                    </div>
                    <div class="loginBorder dettborder p-3 form-control cream">
                        <h5>@Model.Dettaglio1</h5>
                    </div>
                </div>

            }
            @if (Model.Dettaglio2 != null)
            {
                <div class="d-flex justify-content-center align-items-center  p-2">
                    <div class="sage detailsico dettborder px-2 py-1">
